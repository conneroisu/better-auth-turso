// VuePress color palette customization

// Brand colors
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc

// Badge colors
$badgeTipColor = #42b983
$badgeWarningColor = #e7c000
$badgeErrorColor = #da5961

// Layout
$navbarHeight = 3.6rem
$sidebarWidth = 20rem
$contentWidth = 800px
$homePageWidth = 960px

// Responsive breakpoints
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px

// Custom color variables
$primaryColor = #3eaf7c
$secondaryColor = #42b983
$successColor = #42b983
$warningColor = #e7c000
$errorColor = #da5961
$infoColor = #476582

// Background colors
$bgColor = #ffffff
$bgColorLight = #f6f8fa
$bgColorDark = #f1f3f4

// Text colors
$textColorLight = #6a737d
$textColorDark = #24292e

// Border colors
$borderColorLight = #e1e4e8
$borderColorMedium = #d1d5da
$borderColorDark = #c6cbd1

// Shadow colors
$shadowLight = rgba(0, 0, 0, 0.05)
$shadowMedium = rgba(0, 0, 0, 0.1)
$shadowDark = rgba(0, 0, 0, 0.15)

// Code colors
$codeColorInline = #476582
