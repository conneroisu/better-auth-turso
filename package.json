{
  "name": "better-auth-turso",
  "version": "1.0.0",
  "description": "Turso database adapter for Better Auth",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:property": "vitest run --config vitest.property.config.ts",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "precommit": "npm run check && npm run test:run",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:serve": "vuepress build docs && npx http-server docs/.vuepress/dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "@vuepress/plugin-active-header-links": "^1.9.10",
    "@vuepress/plugin-back-to-top": "^1.9.10",
    "@vuepress/plugin-nprogress": "^1.9.10",
    "@vuepress/plugin-register-components": "^1.9.10",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "fast-check": "^3.23.2",
    "happy-dom": "^15.11.7",
    "lru-cache": "^5.1.1",
    "markdown-it-container": "^3.0.0",
    "moment": "^2.30.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^2.1.9",
    "vuepress": "^1.9.10"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "markdown-it-emoji": "^2.0.2"
  },
  "peerDependencies": {
    "better-auth": "latest"
  },
  "keywords": [
    "better-auth",
    "turso",
    "database",
    "adapter",
    "libsql",
    "sqlite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/better-auth-turso.git"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
